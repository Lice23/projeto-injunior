<p id="notice"><%= notice %></p>

<h1 class="header-tabela">Reserva de Equipamentos</h1>
<div class="panel-body responsive tabela">
<table id="example" class=" display table dt-responsive no-wrap" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Equipamento</th>
      <th>Usuário</th>
      <th>Data início do empréstimo</th>
      <th>Data do fim do empréstimo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reserva_equipamentos.each do |reserva_equipamento| %>
      <tr>
        <td><%= reserva_equipamento.equipamento.desc %></td>
        <td><%= reserva_equipamento.user.nome %></td>
        <td><%= reserva_equipamento.data_ini_equip %></td>
        <td><%= reserva_equipamento.data_fin_equip %></td>
        <td><%= link_to 'Mostrar', reserva_equipamento %></td>
        <% if current_user.gerente?  || current_user === reserva_equipamento.user  %>
          <td><%= link_to 'Editar', edit_reserva_equipamento_path(reserva_equipamento) %></td>
        <% end %>
        <% if current_user.gerente? && !current_user?(@user) %>
          <td><%= link_to 'Remover', reserva_equipamento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Reservar um Equipamento', new_reserva_equipamento_path , class:'link_fim_pagina'%>
 
 
 