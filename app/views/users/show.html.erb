
<h2> Olá <%= @user.nome %></h2>
<h5 class ="esquerda">  <br>
    Email: <%= @user.email %> <br><br>
    Matrícula: <%= @user.matricula %><br><br>

    CPF: <%= @user.cpf %> <br><br>
    Telefone: <%= @user.telefone %><br><br>
    Tipo: <%= @user.tipo %> <br><br>
    
    <%= link_to "Editar", edit_user_path(current_user) %><br>

    <% if current_user.gerente? && !current_user?(@user) %>
        <%= link_to "Apagar", @user, method: :delete, data: { confirm: "Tem certeza que deseja apagar este usuário?" } %>
    <% end %>

</h5>