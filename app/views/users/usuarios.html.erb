<h1 class="header-tabela">Usuários</h1>
<div class="panel-body responsive tabela">
<table id="example" class=" display table dt-responsive no-wrap" cellspacing="0" width="100%">
<thead>
  <tr>
    <th>Nome</th>
    <th>Matricula</th>
    <th>Email</th>
    <th>Telefone</th>
    <th>CPF</th>
    <th>Apagar</th>
    <th>Editar</th>

  </tr>
</thead>
<tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.nome %></td>
      <td><%= user.matricula %></td>
      <td><%= user.email %></td>
      <td><%= user.telefone %></td>
      <td><%= user.cpf %></td>
      <td><%= link_to "Apagar", user, method: :delete, data: { confirm: "Tem certeza que deseja apagar este usuário?" } %></td>
      <td><%= link_to "Editar", edit_user_path(user.id) %></td>
      
    </tr>
  <% end %>
 </tbody>
</table>
</div>
  
  <script src="assets/jquery.min.js"></script>
  <script src ="assets/jquery.dataTables.min.js"></script>
  <script src= "assets/bootstrap.js"></script> 
  
  
        
     
     