<%= form_for(@equipamento) do |f| %>
  <% if @equipamento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@equipamento.errors.count, "erro") %> impediram essa sala de ser salvos:</h2>

      <ul>
      <% @equipamento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :desc %><br>
    <%= f.text_field :desc %>
  </div>
  <div class="field">
    <%= f.label :disp %><br>
    <%= f.check_box :disp %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
